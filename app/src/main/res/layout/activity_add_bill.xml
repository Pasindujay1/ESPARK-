<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sixty_color"
    tools:context=".AddBillActivity">

    <TextView
        android:id="@+id/newBillTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/thirty_color"
        android:fontFamily="@font/poppins_medium"
        android:paddingTop="10dp"
        android:text="@string/add_bill_title"
        android:textAlignment="center"
        android:textColor="@color/ten_color"
        android:textIsSelectable="false"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/billTV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/bill_year"
        android:textColor="@color/ten_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newBillTitle" />

    <Spinner
        android:id="@+id/billSpinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/add_bill_spinner_layout_marginStart"
        android:layout_marginTop="8dp"
        android:entries="@array/bill_year"
        android:minHeight="@dimen/add_bill_spinner_layout_minHeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billTV1" />

    <TextView
        android:id="@+id/billTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/bill_month"
        android:textColor="@color/ten_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billSpinner1" />

    <Spinner
        android:id="@+id/billSpinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/add_bill_spinner_layout_marginStart"
        android:layout_marginTop="8dp"
        android:entries="@array/bill_month"
        android:minHeight="@dimen/add_bill_spinner_layout_minHeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billTV2" />

    <TextView
        android:id="@+id/billTV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/start_date"
        android:textColor="@color/ten_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billSpinner2" />

    <EditText
        android:id="@+id/billStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/date"
        android:inputType="date"
        android:minHeight="50dp"
        android:textColorHint="@color/thirty_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billTV3" />

    <TextView
        android:id="@+id/billTV4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/end_date"
        android:textColor="@color/ten_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billStartDate" />

    <EditText
        android:id="@+id/billEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/date"
        android:inputType="date"
        android:minHeight="50dp"
        android:textColorHint="@color/thirty_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billTV4" />

    <TextView
        android:id="@+id/billTV5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/bill_units"
        android:textColor="@color/ten_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billEndDate" />

    <EditText
        android:id="@+id/consumedUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/units_hint"
        android:inputType="number"
        android:minHeight="50dp"
        android:textColorHint="@color/thirty_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billTV5" />

    <TextView
        android:id="@+id/billTV6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/amount"
        android:textColor="@color/ten_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consumedUnits" />

    <EditText
        android:id="@+id/newBillAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/units_hint"
        android:inputType="numberDecimal"
        android:minHeight="50dp"
        android:textColorHint="@color/thirty_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billTV6" />

    <Button
        android:id="@+id/billAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/add_bill_button_layout_marginStart"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/thirty_color"
        android:text="@string/add_bill_submit"
        android:textColor="@color/ten_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/billCancelBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newBillAmount" />

    <Button
        android:id="@+id/billCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/thirty_color"
        android:text="@string/bill_cancel_btn"
        android:textColor="@color/ten_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/billAddBtn"
        app:layout_constraintTop_toBottomOf="@+id/newBillAmount" />

</androidx.constraintlayout.widget.ConstraintLayout>