<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_blue"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sixty_color">

        <TextView
            android:id="@+id/txtView1"
            android:layout_width="160dp"
            android:layout_height="21dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/edt_plan_Name"
            android:textColor="@color/thirty_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/editTextPlanName"
            app:layout_constraintEnd_toStartOf="@+id/editTextPlanName"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editTextPlanName" />

        <EditText
            android:id="@+id/editTextPlanName"
            android:layout_width="218dp"
            android:layout_height="43dp"
            android:ems="10"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/plan1"
            android:inputType="textPersonName"
            android:text="@string/plan1"
            android:textColor="@color/thirty_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txtView1"
            tools:layout_editor_absoluteY="40dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>