<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ViewItemActivity">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/sixty_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/thirty_color">

<!--            <ImageView-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:src="@drawable/baseline_keyboard_backspace_24"-->
<!--                android:layout_centerVertical="true"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pro_details"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/ten_color"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_regular"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:padding="20dp"
            android:background="@color/thirty_color">

            <ImageView
                android:id="@+id/productImg1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/baseline_image_24"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tvProName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_pName"
                android:textSize="20sp"
                android:layout_toRightOf="@id/productImg1"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"/>

            <TextView
                android:id="@+id/tvBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_Brand"
                android:includeFontPadding="false"
                android:textSize="14sp"
                android:layout_toRightOf="@id/productImg1"
                android:layout_below="@id/tvProName"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="-100dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/thirty_color"
                app:cardElevation="10dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/warImg"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/baseline_image_24"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/txt_WarImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warranty Card"
                        android:includeFontPadding="false"
                        android:textSize="15sp"
                        android:layout_below="@id/warImg"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_regular"/>


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/thirty_color"
                app:cardElevation="10dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/billImg"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/baseline_image_24"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/txt_billImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bill/Receipt"
                        android:includeFontPadding="false"
                        android:layout_below="@id/billImg"
                        android:textSize="15sp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_regular"/>


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dt_purchased"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_regular">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvPurchDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_calendar_month_24"
                        android:drawablePadding="10dp"
                        android:text="@string/pch_date"
                        android:fontFamily="@font/poppins_medium"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/wPeriod"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_regular">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvWarPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_alarm_24"
                        android:drawablePadding="10dp"
                        android:text="@string/warPeriod"
                        android:fontFamily="@font/poppins_medium"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/price"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_regular">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_currency_exchange_24"
                        android:drawablePadding="10dp"
                        android:text="@string/proPrice"
                        android:fontFamily="@font/poppins_medium"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_Location"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_regular">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_location_on_24"
                        android:drawablePadding="10dp"
                        android:text="@string/address"
                        android:fontFamily="@font/poppins_medium"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_phone"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_regular">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvPhoneNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_local_phone_24"
                        android:drawablePadding="10dp"
                        android:text="@string/phoneNo"
                        android:fontFamily="@font/poppins_medium"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_email"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_regular">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_email_24"
                        android:drawablePadding="10dp"
                        android:text="@string/emailEx"
                        android:fontFamily="@font/poppins_medium"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/updateBtn"
                    android:backgroundTint="@color/thirty_color"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/ten_color"/>

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/deleteBtn"
                    android:backgroundTint="@color/thirty_color"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/ten_color" />

            </LinearLayout>

        </ScrollView>



    </LinearLayout>

</FrameLayout>