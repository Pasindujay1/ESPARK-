<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_bill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sixty_color"
    android:orientation="vertical"
    tools:context=".PastBills">

    <TextView
        android:id="@+id/bills_title_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/thirty_color"
        android:gravity="center_vertical"
        android:text="Bills"
        android:textAlignment="center"
        android:textColor="@color/ten_color"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/list_view_bills"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>